<div class="row">
  <div class="col-md-3">
    <ul class="list-group">
      <%= link_to "Your Listings", rooms_path, class: "list-group-item list-group-item-action" %>
      <%= link_to "Your Reservations", myreservations_path, class: "list-group-item list-group-item-action active" %>
      <%= link_to "Your Trips", mytrips_path, class: "list-group-item list-group-item-action" %>
    </ul>
  </div>

  <div class="col-md-9">
    <div class="card">
      <div class="card-header">
        Your Reservations
      </div>
      <div class="card-body">
        <div class="container">
          <% @rooms.each do |room| %>
            <% room.reservations.each do |reservation| %>
              <div class="row">
                <div class="col-md-2">
                  <%=  reservation.start_date.strftime('%v') %>
                </div>
                <div class="col-md-2" style="height:100px;overflow:hidden;">
                  <%=  link_to room_path(reservation.room) do %>
                    <%= image_tag reservation.room.use_first_photo(:medium), class: "img-fluid mx-auto d-block img-middle" %>
                  <%  end %>
                </div>
                <div class="col-md-5">
                  <h5 class="pull-left"><%= link_to reservation.room.listing_name, room_path(reservation.room) %></h5>
                </div>
                <div class="col-md-3">
                  <span class="pull-right text-center">
                    <%= image_tag avatar_url(reservation.user), class: "avatar_middle rounded-circle" %>
                    <%= link_to user_path(reservation.user) do %><br>
                      <%= reservation.user.fullname %>
                    <%end%>
                  </span>
                </div>
              </div>
              <hr/>
            <% end %>
          <% end %>
            
        </div>
      </div>
    </div>
  </div>
</div>